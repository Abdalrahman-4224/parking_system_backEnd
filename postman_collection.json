{
  "info": {
    "name": "Parking System API",
    "description": "API collection for Parking System Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Server Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Check if server is running"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"phoneNumber\": \"+1234567890\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user with phone number and password"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phoneNumber\": \"+1234567890\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with phone number and password"
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            },
            "description": "Get current user profile (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "OTP (TODO - SMS Service)",
      "description": "OTP routes - Currently logs to console in development. Will send real SMS when service is configured.",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phoneNumber\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/otp/send",
              "host": ["{{baseUrl}}"],
              "path": ["otp", "send"]
            },
            "description": "Send OTP to phone number (check server console for OTP code in dev mode)"
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phoneNumber\": \"+1234567890\",\n    \"otpCode\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/otp/verify",
              "host": ["{{baseUrl}}"],
              "path": ["otp", "verify"]
            },
            "description": "Verify OTP code"
          }
        },
        {
          "name": "Resend OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phoneNumber\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/otp/resend",
              "host": ["{{baseUrl}}"],
              "path": ["otp", "resend"]
            },
            "description": "Resend OTP to phone number"
          }
        }
      ]
    },
    {
      "name": "Parking Locations",
      "item": [
        {
          "name": "Get All Locations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/locations",
              "host": ["{{baseUrl}}"],
              "path": ["locations"]
            },
            "description": "Get all parking locations with availability info"
          }
        },
        {
          "name": "Get All Locations (with filters)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/locations?city=New York&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["locations"],
              "query": [
                {
                  "key": "city",
                  "value": "New York"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get all parking locations with optional filters"
          }
        },
        {
          "name": "Get Nearby Locations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/locations/nearby?latitude=40.7128&longitude=-74.0060&radius=10",
              "host": ["{{baseUrl}}"],
              "path": ["locations", "nearby"],
              "query": [
                {
                  "key": "latitude",
                  "value": "40.7128",
                  "description": "User's current latitude"
                },
                {
                  "key": "longitude",
                  "value": "-74.0060",
                  "description": "User's current longitude"
                },
                {
                  "key": "radius",
                  "value": "10",
                  "description": "Search radius in kilometers (default: 10)"
                }
              ]
            },
            "description": "Get parking locations near user's GPS coordinates"
          }
        },
        {
          "name": "Get Location by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/locations/:id",
              "host": ["{{baseUrl}}"],
              "path": ["locations", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "location-uuid-here"
                }
              ]
            },
            "description": "Get a specific parking location by ID"
          }
        },
        {
          "name": "Create Location",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"New Parking Lot\",\n    \"address\": \"123 Test Street\",\n    \"city\": \"New York\",\n    \"latitude\": 40.7500,\n    \"longitude\": -73.9900,\n    \"totalSpots\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/locations",
              "host": ["{{baseUrl}}"],
              "path": ["locations"]
            },
            "description": "Create a new parking location (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Parking Spots",
      "item": [
        {
          "name": "Get All Spots",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/spots",
              "host": ["{{baseUrl}}"],
              "path": ["spots"]
            },
            "description": "Get all parking spots"
          }
        },
        {
          "name": "Get Spots by Location",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/spots?locationId=location-uuid-here",
              "host": ["{{baseUrl}}"],
              "path": ["spots"],
              "query": [
                {
                  "key": "locationId",
                  "value": "location-uuid-here",
                  "description": "Filter by location ID"
                }
              ]
            },
            "description": "Get all parking spots for a specific location"
          }
        },
        {
          "name": "Get Spots by Location (with status filter)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/spots?locationId=location-uuid-here&status=available",
              "host": ["{{baseUrl}}"],
              "path": ["spots"],
              "query": [
                {
                  "key": "locationId",
                  "value": "location-uuid-here"
                },
                {
                  "key": "status",
                  "value": "available",
                  "description": "Filter by status: available, occupied, reserved, maintenance"
                }
              ]
            },
            "description": "Get available spots for a location"
          }
        },
        {
          "name": "Get Spot by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/spots/:id",
              "host": ["{{baseUrl}}"],
              "path": ["spots", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "spot-uuid-here"
                }
              ]
            },
            "description": "Get a specific parking spot by ID"
          }
        },
        {
          "name": "Create Spot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"spotNumber\": \"D-001\",\n    \"locationId\": \"location-uuid-here\",\n    \"hourlyRate\": 5.00,\n    \"status\": \"available\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/spots",
              "host": ["{{baseUrl}}"],
              "path": ["spots"]
            },
            "description": "Create a new parking spot (requires authentication)"
          }
        },
        {
          "name": "Update Spot Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\": \"maintenance\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/spots/:id",
              "host": ["{{baseUrl}}"],
              "path": ["spots", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "spot-uuid-here"
                }
              ]
            },
            "description": "Update parking spot status (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Get My Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"]
            },
            "description": "Get all bookings for the authenticated user"
          }
        },
        {
          "name": "Get My Bookings (with filters)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bookings?status=active&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"],
              "query": [
                {
                  "key": "status",
                  "value": "active",
                  "description": "Filter by status: active, completed, cancelled, expired"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get bookings with status filter"
          }
        },
        {
          "name": "Get Booking by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bookings/:id",
              "host": ["{{baseUrl}}"],
              "path": ["bookings", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "booking-uuid-here"
                }
              ]
            },
            "description": "Get a specific booking by ID"
          }
        },
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"spotId\": \"spot-uuid-here\",\n    \"durationHours\": 2,\n    \"paymentMethod\": \"card\",\n    \"vehicleNumber\": \"ABC-1234\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"]
            },
            "description": "Create a new booking for a parking spot"
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bookings/:id/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["bookings", ":id", "cancel"],
              "variable": [
                {
                  "key": "id",
                  "value": "booking-uuid-here"
                }
              ]
            },
            "description": "Cancel an active booking"
          }
        },
        {
          "name": "Complete Booking",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bookings/:id/complete",
              "host": ["{{baseUrl}}"],
              "path": ["bookings", ":id", "complete"],
              "variable": [
                {
                  "key": "id",
                  "value": "booking-uuid-here"
                }
              ]
            },
            "description": "Mark a booking as completed"
          }
        },
        {
          "name": "Extend Booking",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"additionalHours\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/bookings/:id/extend",
              "host": ["{{baseUrl}}"],
              "path": ["bookings", ":id", "extend"],
              "variable": [
                {
                  "key": "id",
                  "value": "booking-uuid-here"
                }
              ]
            },
            "description": "Extend an active booking by additional hours"
          }
        }
      ]
    }
  ]
}
